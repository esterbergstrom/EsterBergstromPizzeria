@model HomeViewModel
@{
    var selectedCategory = String.Empty;
    var availableCategories = new List<string>();

    switch (Model.Category)
    {
        case Enums.DishCategory.ItalianPizza:
            selectedCategory = "Italienska pizzor";
            availableCategories.Add("Specialpizzor");
            availableCategories.Add("Sallader");
            break;
        case Enums.DishCategory.SpecialPizza:
            selectedCategory = "Specialpizzor";
            availableCategories.Add("Italienska pizzor");
            availableCategories.Add("Sallader");
            break;
        case Enums.DishCategory.Salad:
            selectedCategory = "Sallader";
            availableCategories.Add("Italienska pizzor");
            availableCategories.Add("Specialpizzor");
            break;
    }
}

@foreach (var dish in Model.Dishes)
{
    @Html.Partial("_Dish", dish)
}
