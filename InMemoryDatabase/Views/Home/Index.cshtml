@using InMemoryDatabase.Helpers
@model HomeViewModel
@{
    var categories = CategoryHelper.EnumsToList();

    if (categories.Contains(Model.Category))
    {
        categories.Remove(Model.Category);
    }

    var categoryMenuViewModel = new CategoryMenuViewModel()
    {
        SelectedCategory = Model.Category,
        AvailableCategories = categories
    };
}

@Html.Partial("_CategoryMenu", categoryMenuViewModel)

@foreach (var dish in Model.Dishes)
{
    @Html.Partial("_Dish", dish)
}
