@model CartItem

<h1>@Model.Dish.Name</h1>

<div class="dish-image-container">
    <div class="dish-image" style="background-image: url(@Model.Dish.ImageURL);"></div>
</div>

@using (Html.BeginForm("CustomizeDish", "Home", new { Model }, FormMethod.Post, null, new { @class = "customize-dish-form" }))
{
    <div class="extras-container">
        @foreach (var extra in Model.Extras)
        {
            <div class="extra">
                <input class="extra__checkbox" type="checkbox" name="SelectedExtras" value="@extra" style="background-image: url(@extra.ImageURL);" />
                <h3 class="extra__heading">@extra.Name</h3>
                <p class="extra__price">@extra.Price kr</p>
            </div>
        }
    </div>

    <input class="customize-dish-form__submit" type="submit" value="Lägg i varukorgen" />
}
